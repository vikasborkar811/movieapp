@model MovieApp.Entity.MovieModel
@{
    ViewData["Title"] = "AddMovie";
}

<h1>Add Movie</h1>
<form method="post">
    <div class="form-group">
        <label for="Firstname">Movie Name</label>
        <input type="text" class="form-control" asp-for="MovieName">
    </div>
    <div class="form-group">
        <label for="Firstname">Movie Description</label>
        <input type="text" class="form-control" asp-for="MovieDescription">
    </div>
    <div class="form-group">
        <label for="Firstname">Movie Type</label>
        <input type="text" class="form-control" asp-for="MovieType">
    </div>
    <div class="form-group">
        <label for="Firstname">Movie Language</label>
        <input type="text" class="form-control" asp-for="MovieLanguage">
    </div>
    <input type="submit" class="btn btn-primary" value="Add Movie">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
    <hr />
    <a asp-controller="User" asp-action="Login">Login</a>
</form>
